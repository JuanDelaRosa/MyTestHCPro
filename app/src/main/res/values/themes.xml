<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTestHCPro" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="titleTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Header1">
        <item name="android:textColor">@color/ash_dark</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">"bold"</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textColor">@color/ash</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="Subtitle2">
        <item name="android:textColor">@color/ash</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">"italic"</item>
    </style>
    <style name="Subtitle3">
        <item name="android:textColor">@color/ash</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">"bold"</item>
    </style>
    <style name="link">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
</resources>